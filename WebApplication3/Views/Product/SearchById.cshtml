@{
    ViewData["Title"] = "Search";
}



@{
    Product p;
    if(ViewBag.data != null)
    {
        p = (Product)ViewBag.data;
        <div class="container">

            <div class="row">

                        <div class="col-4">
                            <div class="card">
                                <img src="@p.ImgLink" class="card-img-top" alt="img">
                                <div class="card-body">
                                    <h3 class="text-center">@p.Name  @("  " + p.Price + " TL")</h3>
                                    <p class="card-text">@p.Description</p>
                                    <span class="badge bg-info">@("ID : " + p.Id)</span>
                                </div>
                            </div>

                        </div>
                    }

                
            </div>
        </div>
    }
    else
    {
        <p>Ürün yok</p>
    }
}


