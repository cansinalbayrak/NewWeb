@{
    ViewData["Title"] = "Search";
}

@model List<Product>
<h1 class="text-center">Search Result</h1>

@if(Model.Count == 0)
{
    <h2>Böyle ürün bulunamadı.</h2>
}

else
{
    <div class="container">

        <div class="row">
            @{


                foreach (var item in Model)
                {

                    <div class="col-4">
                        <div class="card">
                            <img src="@item.ImgLink" class="card-img-top" alt="img">
                            <div class="card-body">
                                <h3 class="text-center">@item.Name  @("  " + item.Price + " TL")</h3>
                                <p class="card-text">@item.Description</p>
                                <span class="badge bg-info">@("ID : " + item.Id)</span>
                            </div>
                        </div>

                    </div>
                }

            }
        </div>
    </div>


}
